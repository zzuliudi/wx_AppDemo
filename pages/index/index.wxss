/* 页面公共样式 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 图标样式 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  background-color: #d43c33;
  border-radius: 50%;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 20rpx;
}

.recommendContainer .header {
  padding-bottom: 20rpx;
}

.recommendContainer .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .header .more {
  float: right;
  border: 1px solid #333;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}

/* 推荐内容区 */
.recommendScroll {
  display: flex;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出 */
  /* display: block; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 排行榜 */
.topList {
  padding: 20rpx;
}
 .swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  align-items: center;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
}